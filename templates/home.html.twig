<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Football Statistics{% endblock %}</title>
        {% block stylesheets %}<link rel="stylesheet" href="{{ asset('build/app.css') }}">{% endblock %}
    </head>
    <body>
        {% block body %}
            <div id="full-page">
                <div class="container-fluid home-blue">
                    <div class="text-center">
                        <img src="{{ asset('/build/logo.png') }}">
                    </div>
                    <h3 class="text-white text-center force-to-bottom">Which championship do you want to bet on ?</h3>
                </div>
                <div class="container-fluid home-white">
                    {{ form_start(form) }}
                    {{ form_errors(form) }}
                    <div class="row justify-content-md-center">
                        <div class="col-md-3 col-sm-12">
                            {{ form_widget(form.competition) }}
                        </div>
                        <div class="col-md-1 col-sm-12">
                            {{ form_widget(form.submit) }}
                        </div>
                        {{ form_rest(form) }}
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        {% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
