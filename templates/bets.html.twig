{% extends 'layout.html.twig' %}
{% trans_default_domain 'translations' %}

{% block content %}
    {% for label, messages in app.flashes(['danger']) %}
        {% for message in messages %}
            <div class="alert alert-{{ label }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}
    <div class="alert alert-primary col-md-12" id="text">
        {{ 'translations.bets.bets_alert'|trans }}
    </div>
    <div class="mt-2">
    {{ form_start(form) }}
    {{ form_errors(form) }}
        <div class="row">
            <div class="col-md-4">
                {{ form_row(form.competition) }}
            </div>
            <div class="col-md-3">
                {{ form_row(form.date) }}
            </div>
            <div class="col-md-2">
                {{ form_row(form.submit) }}
            </div>
            {{ form_rest(form) }}
            {{ form_end(form) }}
        </div>
        <hr>
        <div>
            <p class="small">
            <button class="btn-sm btn-green">
                <span class="fa fa-sort-up" style="color: white"></span>
            </button>
            <button class="btn-sm btn-danger">
                <span class="fa fa-sort-down"></span>
            </button > :
                {{ 'translations.bets.legend' | trans }}
            </p>
        </div>

        <div class="mt-3">
            <div class="card mt-3">
                <div class="row align-items-center">
                    <div class="col-md-3">
                        <h4 class="text-center">{{ 'translations.bets.under_limit_goals'|trans({'%nbLimit%':nbLimit}) }}</h4>
                    </div>
                    <div class="col-md-9">
                        {% if underNbGoalsMatches | length > 0 %}
                            <table class="table table-hover table-borderless mt-2">
                                <thead>
                                <tr>
                                    <th class="small font-weight-bold" scope="col">{{ 'translations.bets.hour' | trans }}</th>
                                    <th class="small font-weight-bold" scope="col">{{ 'translations.bets.game'|trans }}</th>
                                    <th class="small font-weight-bold" scope="col">{{ 'translations.bets.odd'|trans }}</th>
                                    <th class="small font-weight-bold" scope="col">{{ 'translations.bets.form'|trans }}</th>
                                    <th class="small font-weight-bold" scope="col">{{ 'translations.bets.predictional_goals'|trans }}</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for match in underNbGoalsMatches %}
                                    {% if match.previsionalNbGoals < 2.1 %}
                                        {% set background = '#002A40' %}
                                    {% elseif match.previsionalNbGoals < 2.6 %}
                                        {% set background = '#00547F' %}
                                    {% elseif match.previsionalNbGoals < 3.2 %}
                                        {% set background = '#007FBF' %}
                                    {% elseif match.previsionalNbGoals < 4 %}
                                        {% set background = '#0098E5' %}
                                    {% else %}
                                        {% set background = '#00A9FF' %}
                                    {% endif %}
                                    <tr>
                                        <th class="small" scope="row">{{ match.date | date('H:i') }}</th>
                                        <td class="small text-left" scope="row">{{ match.homeTeam.name }} - {{ match.awayTeam.name }}</td>
                                        <td class="small" scope="row">{{ match.odd }}</td>
                                        <td class="small" scope="row">{% include ('/partial/_momentForm.html.twig') %}</td>
                                        <td scope="row"><span class="float-right badge badge-pill" style="background: {{ background }}; color: white;">{{ match.previsionalNbGoals | round(2) }} {{ 'translations.bets.goals'|trans }}</span></td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        {% else %}
                            <h4>
                                <span class="badge badge-pill" style="background: red; color: white;">{{ 'translations.bets.no_games'|trans }}</span>
                            </h4>
                        {% endif %}
                    </div>
                </div>
            </div>
            <div class="card mt-3">
                <div class="row align-items-center">
                    <div class="col-md-3">
                        <h4 class="text-center">{{ 'translations.bets.over_limit_goals'|trans({'%nbLimit%':nbLimit}) }}</h4>
                    </div>
                    <div class="col-md-9">
                        {% if overNbGoalsMatches | length > 0 %}
                            <table class="table table-hover table-borderless mt-2">
                                <thead>
                                <tr>
                                    <th class="small font-weight-bold" scope="col">{{ 'translations.bets.hour' | trans }}</th>
                                    <th class="small font-weight-bold" scope="col">{{ 'translations.bets.game'|trans }}</th>
                                    <th class="small font-weight-bold" scope="col">{{ 'translations.bets.odd'|trans }}</th>
                                    <th class="small font-weight-bold" scope="col">{{ 'translations.bets.form'|trans }}</th>
                                    <th class="small font-weight-bold" scope="col">{{ 'translations.bets.predictional_goals'|trans }}</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for match in overNbGoalsMatches %}
                                    {% if match.previsionalNbGoals < 2.1 %}
                                        {% set background = '#002A40' %}
                                    {% elseif match.previsionalNbGoals < 2.6 %}
                                        {% set background = '#00547F' %}
                                    {% elseif match.previsionalNbGoals < 3.2 %}
                                        {% set background = '#007FBF' %}
                                    {% elseif match.previsionalNbGoals < 4 %}
                                        {% set background = '#0098E5' %}
                                    {% else %}
                                        {% set background = '#00A9FF' %}
                                    {% endif %}
                                    <tr>
                                        <th class="small" scope="row">{{ match.date | date('H:i') }}</th>
                                        <td class="small text-left" scope="row">{{ match.homeTeam.name }} - {{ match.awayTeam.name }}</td>
                                        <td class="small" scope="row">{{ match.odd }}</td>
                                        <td class="small" scope="row">{% include ('/partial/_momentForm.html.twig') %}</td>
                                        <td scope="row"><span class="float-right badge badge-pill" style="background: {{ background }}; color: white;">{{ match.previsionalNbGoals | round(2) }} {{ 'translations.bets.goals'|trans }}</span></td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        {% else %}
                            <h4>
                                <span class="badge badge-pill" style="background: red; color: white;">{{ 'translations.bets.no_games'|trans }}</span>
                            </h4>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}